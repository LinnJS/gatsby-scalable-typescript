{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2017", "esnext"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "src": ["./src/*"],
      "assets": ["./src/assets"],
      "global": ["./src/global"],
      "pages": ["./src/pages"],
      "primitives": ["./src/primitives"],
      "utils": ["./src/utils"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "public", ".cache"]
}
